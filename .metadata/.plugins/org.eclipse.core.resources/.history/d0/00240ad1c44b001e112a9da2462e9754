package com.oguogu.lounge.model.dao;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.oguogu.lounge.model.vo.Lounge_VO;

@Repository
public class Lounge_DAO {
	@Autowired
	private SqlSessionTemplate sqlSessoinTemplate;
	// 게시글 목록
	public List<Lounge_VO> getList(int offset, int limit){
		Map<String, Integer> map = new HashMap<String, Integer>();
		map.put("limit", limit);
		map.put("offset", offset);
		return sqlSessoinTemplate.selectList("lounge.list",map);
	}
	
	public List<Lounge_VO> getList(){
		return sqlSessoinTemplate.selectList("lounge.list");
	}
	// 게시글 삽입
	
	// 게시글 조회수
	
	// 게시글 상세보기
	
	// 게시글
}
